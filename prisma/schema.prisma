generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum ContactType {
  email
  phone
}

model User {
  id          String      @id @default(uuid())
  email       String?     @unique
  phone       String?     @unique
  contactType ContactType @default(email)
  isVerified  Boolean?
  password    String?
  meters      Meter[]
  otps        OTP[]
  createdAt   DateTime    @default(now())
}

model Meter {
  id        String     @id @default(uuid())
  meterNo   String
  name      String
  balance   Float
  threshold Float
  type      MeterType?
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now())

  @@unique([meterNo, userId])
}

enum MeterType {
  Nesco
  Desco
}

model OTP {
  id          String      @id @default(uuid())
  otp         String
  contactType ContactType @default(email)
  expiresAt   DateTime
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime    @default(now())
}
