generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  isVerified Boolean
  password   String   @default("")
  meters     Meter[]
  otps       OTP[]
  createdAt  DateTime @default(now())
}

model Meter {
  id        String     @id @default(uuid())
  meterNo   String
  name      String
  balance   Float
  threshold Float
  type      MeterType?
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now())

  @@unique([meterNo, userId])
}

enum SendingMethod {
  EMAIL
  SMS
}

enum MeterType {
  Nesco
  Desco
}

model OTP {
  id            String        @id @default(uuid())
  otp           String
  sendingMethod SendingMethod
  expiresAt     DateTime
  userId        String
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime      @default(now())
}
